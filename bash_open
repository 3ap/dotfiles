open_func() {
  file="$1"

  IFS='/' read -r major minor < <(file -ib "$file" 2>/dev/null | cut -d ';' -f 1)

  case "$major/$minor" in
    text/html)
      firefox "$@" & disown;;
    application/pdf)
      zathura "$@" & disown;;
    image/*)
      feh "$@" & disown;;
    text/*)
      xterm -e vim "$@" & disown;;
    video/*)
      mpv "$@" & disown;;
    *)
      /usr/bin/xdg-open "$@";;
  esac
}

command -v open >/dev/null 2>&1 && alias o=open || alias o=open_func
